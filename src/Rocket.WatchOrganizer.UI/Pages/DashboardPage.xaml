<?xml version="1.0" encoding="utf-8" ?>
<views:MvxContentPage
    x:Class="Rocket.WatchOrganizer.UI.Pages.DashboardPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Rocket.WatchOrganizer.UI.Pages"
    xmlns:mvx="clr-namespace:MvvmCross.Forms.Bindings;assembly=MvvmCross.Forms"
    xmlns:viewModels="clr-namespace:Rocket.WatchOrganizer.Core.ViewModels.Dashboard;assembly=Rocket.WatchOrganizer.Core"
    xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
    Title="Dash"
    x:TypeArguments="viewModels:DashboardViewModel">
    <ContentPage.Content>
        <StackLayout>
            <Label
                HorizontalOptions="CenterAndExpand"
                Text="Welcome!!&#10;App scaffolded with MvxScaffolding"
                VerticalOptions="CenterAndExpand" />

            <Label Text="&#xe88a;"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="CenterAndExpand"
               Style="{StaticResource LabelMaterialIconsRegular}"/>
            
            <Label
                HorizontalOptions="CenterAndExpand"
                Text="Texto com fonte Nunito"
                FontSize="22"
                VerticalOptions="CenterAndExpand" Style="{StaticResource LabelNunitoLight}"/>

        </StackLayout>
    </ContentPage.Content>
</views:MvxContentPage>
