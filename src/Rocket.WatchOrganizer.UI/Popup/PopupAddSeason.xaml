<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Rocket.WatchOrganizer.UI.Popup.PopupAddSeason"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout Style="{StaticResource PopupLayout}">
            <Label Text="Simple Popup" />
            <BoxView
                Grid.Row="2"
                Margin="30,0,30,20"
                Style="{StaticResource Divider}"
                Color="#CCC" />

            <Label Text="This is a native popup with a Xamarin.Forms View being rendered. The behaviors of the popup will confirm to 100% native look and feel, but still allows you to use your Xamarin.Forms controls." />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>